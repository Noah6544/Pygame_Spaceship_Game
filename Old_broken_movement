import pygame
from pygame.locals import *

# Initialize
pygame.init()
# Screen
pygame.display.set_caption("Spaceinvaders")
spaceship = pygame.image.load("spaceship.png")
pygame.display.set_icon(spaceship)
size = 800, 600
width, height = size
screen = pygame.display.set_mode((width, height))
# variables
player1_x = 200
player1_y = 200
enemyx = 200
enemyy = 20
playerxchange = 0
playerychange = 0
enemyxchange = 0
enemyychange = 0




# FUNCTIONS
def draw():
    pygame.display.update()

def player():
    screen.blit(spaceship, (player1_x, player1_y))


def enemy():
    screen.blit(spaceship, (enemyx, enemyy))


running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_w:
                playerychange -= 1
            elif event.key == pygame.K_s:
                playerychange += 1
            elif event.key == pygame.K_a:
                playerxchange -= 1
            elif event.key == pygame.K_d:
                playerxchange += 1
            elif event.key == pygame.K_RIGHT:
                enemyxchange += 1
            if event.key == pygame.K_UP:
                enemyychange -= 1
            elif event.key == pygame.K_LEFT:
                enemyxchange -= 1
            elif event.key == pygame.K_DOWN:
                enemyychange += 1
        elif event.type == pygame.KEYUP:
            if event.key == pygame.K_UP:
                enemyychange = 0
            elif event.key == pygame.K_DOWN:
                enemyychange = 0
            elif event.key == pygame.K_LEFT:
                enemyxchange = 0
            elif event.key == pygame.K_RIGHT:
                enemyxchange = 0

            elif event.key == pygame.K_w:
                enemyychange = 0
            elif event.key == pygame.K_s:
                enemyychange = 0
            elif event.key == pygame.K_a:
                enemyxchange = 0
            elif event.key == pygame.K_d:
                enemyxchange = 0

    screen.fill((0, 0, 0))
    player1_y += playerychange
    player1_x += playerxchange
    enemyx += enemyxchange
    enemyy += enemyychange
    if player1_x >= 692:
        player1_x = 692
    elif player1_x < -19:
        player1_x = -19
    if player1_y <= -19:
        player1_y = 0
    elif player1_y >= 479:
        player1_y = 479
    print(player1_y)
    player()
    enemy()
    draw()

pygame.quit()
